{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch localhost with sourcemaps",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080/index.html",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        },
        {
            "name": "Launch local file",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceRoot}/dist/index.html"
        }
    ]
}